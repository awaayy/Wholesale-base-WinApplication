<Window x:Class="UPpril.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="400" Background="#b5d5ca">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите логин и пароль" Margin="6,0,0,10" FontSize="16"/>
            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox Name="txtLogin" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox Name="txtPassword" Width="200" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ВОЙТИ" Width="100" Margin="0,0,10,0" Click="Login_Click" Background="#d1eefc"/>
                <Button Content="ОТМЕНА" Width="100" Click="Cancel_Click" Background="#e0a9af"/>
            </StackPanel>
        </StackPanel>
        <Grid HorizontalAlignment="Right" Height="68" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="81">

            <TextBlock Text="ООО &quot;Опт Лидер&quot;" FontSize="10" Margin="0,55,0,0" 
                HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Image Source="/View/icon.png" 
                Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,0,0,0"/>

        </Grid>

    </Grid>
</Window>
